@using System.Globalization;
@model HotelAdvisorDAL.Models.HotelDetailsViewModel

<div><img src=@Url.Action("getImages", "Hotel", new { id = Model.HotelId }) alt="Hotel Image" width="500px" height="250px" /> </div>
<div>
    <h2>@Html.DisplayFor(model => model.HotelName)</h2>

    <div>
        @Html.DisplayNameFor(model => model.AverageRating): <span> <input id="inputAvgGrade" value="@Convert.ToString(Model.AverageRating, new CultureInfo("en-US"))" class="rating disable-raiting" data-symbol="*" data-size="xs"></span>
</div>

@foreach (var comment in Model.Comments)
{
    <hr />
    <div class="row">
        <input id="input-@comment.Id" class="rating disable-raiting" data-symbol="*" data-size="xs" value="@Convert.ToString(comment.Rating, new CultureInfo("en-US"))">
            <div class="col-md-2" style="margin-left :-13px">
                @Html.DisplayFor(modelItem => comment.UserName)<br />
                @Html.DisplayFor(modelItem => comment.DateAdded)
            </div>
            <div class="col-md-12">
            <div class="col-md-2">
                <h4 class="list-group-item-heading">@comment.Title</h4>
            </div>
            <div class="col-md-10">
                <p class="list-group-item-text">@comment.Text</p>
            </div>
            </div>
        </div>
    <hr />
}

</div>

